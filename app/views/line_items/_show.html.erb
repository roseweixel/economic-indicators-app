<div id="line-items" style="padding-left: 80px;">

  <h1><%= line_item.category.name %> - <%= line_item.year %></h1>

  <h1>Total: <%= line_item.total %></h1>

  <% @articles.each_with_index do |article, index| %>
  	<h3 class="headline" id=<%=index%>><%= DateTime.iso8601(article["pub_date"]).strftime("%m.%d.%Y") %> <%= link_to article["headline"]["main"], article["web_url"], :target => "_blank" %></h3>
  	<p class="snippet" id=<%=index%>><%= article["snippet"] %></p>
  <% end %>

</div>

<script>
$(document).ready(function(){
  $('.snippet').hide();
  $('div#line-items').on('mouseenter', 'h3.headline', function(){
    id = this.id;
    $(".snippet[id="+id+"]").show();
  })
  $('div#line-items').on('mouseout', 'h3.headline', function(){
    id = this.id;
    $(".snippet[id="+id+"]").hide();
  })
});
</script>